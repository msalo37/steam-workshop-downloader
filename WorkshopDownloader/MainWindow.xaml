<Window x:Class="WorkshopDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkshopDownloader" xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Steam workshop mods installer" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
        </Grid.RowDefinitions>

        
        <DockPanel Grid.Column="1">
            <Label DockPanel.Dock="Top" Height="25" VerticalAlignment="Top">Server url</Label>
            <TextBox DockPanel.Dock="Top" VerticalAlignment="Top" Name="TextBoxServerUrl" Height="25" Text="https://node03.steamworkshopdownloader.io/" Margin="0,0,0,5"/>
            <Label DockPanel.Dock="Top" Height="25" VerticalAlignment="Top">Mods folder</Label>
            <TextBox DockPanel.Dock="Top" VerticalAlignment="Top" Name="TextBoxModsFolder" Height="25" Margin="0,0,0,5"/>
            <Button DockPanel.Dock="Top" VerticalAlignment="Top" Content="Choose folder" Height="25" Margin="0,0,0,5" Click="Button_Click"></Button>

            <Button DockPanel.Dock="Bottom" VerticalAlignment="Bottom" Height="25" Content="Download all mods" Click="Button_Click_1"></Button>
        </DockPanel>

        <TextBox Name="TextBoxContentAdd" Grid.Row="0" Height="25" VerticalAlignment="Top" KeyDown="TextBox_KeyDown"></TextBox>
        <ListView  Grid.Row="0" Name="WorkshopListView" Margin="0,25,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn  Header="Title" DisplayMemberBinding="{Binding Path=Title}" Width="50"></GridViewColumn>
                    <GridViewColumn  Header="id" DisplayMemberBinding="{Binding Path=Id}" Width="130"></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2">
            <StatusBar>
                <Label Name="StatusInfo"></Label>
            </StatusBar>
        </StackPanel>
    </Grid>
</Window>
